<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChoraList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFEFE"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_back" />

        <TextView
            android:text="ছড়ার তালিকা"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <!--  Chora List  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/choraOne"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="আতা গাছে তোতা পাখি"
                android:textSize="20sp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:height="40dp"/>

            <Button
                android:id="@+id/choraTwo"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="হাট্টিমাটিম টিম"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraThree"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="আয় আয় চাঁদ মামা"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraFour"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ঐ দেখা যায় তাল গাছ"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraFive"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ভোর হলো দোর খোল"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraSix"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:text="আয় রে আয় টিয়ে"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraSeven"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:text="নোটন নোটন"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraEight"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:text="ওখানে কে রে?"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraNine"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:text="তাই তাই তাই মামা বাড়ি যাই"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/choraTen"
                android:elevation="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:text="খোকন খোকন ডাক পাড়ি"
                android:textSize="20sp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>